<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/bao/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/bao/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/bao/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/bao/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/bao/assets/images/logo.svg">
                            </div>
                            <h4>修改详细信息</h4>
                            <h6 class="font-weight-light">输入需要修改的信息即可</h6>
                            <form class="pt-3" action="Updata" method="post">
                                <div class="form-group">
                                    @*<span class="input-group-text">With textarea</span>*@
                                    @*<span class="input-group-text" name="id">@TempData["id"]</span>*@
                                    <div class="input-group-prepend">
                                        <span class="iinput-group-text bg-gradient-primary text-white">ID</span>
                                        <input type="text" class="form-control" style="text-align:center" name="id" value="@TempData["id"]" readonly="readonly">
                                    </div>
                                    
                                </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-lg" name="Name" placeholder="歌曲名称" value="@Model.Name">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-lg" name="Image" placeholder="图片链接" value="@Model.Image">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-lg" name="MusicUrl" placeholder="音乐原链接" value="@Model.Music1">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-lg" name="MusicID" placeholder="歌曲原ID" value="@Model.MusicID">
                                    </div>
                                    <div class="mt-3">
                                        @*<a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">提交</a>*@
                                        <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">提交</button>
                                        <button type="button" class="btn btn-gradient-info btn-lg font-weight-medium auth-form-btn " onclick='location.href=("About")'>取消</button>
                                    </div>
</form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/bao/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/bao/assets/js/off-canvas.js"></script>
    <script src="~/bao/assets/js/hoverable-collapse.js"></script>
    <script src="~/bao/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>

